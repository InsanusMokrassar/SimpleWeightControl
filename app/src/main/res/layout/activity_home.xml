<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.github.insanusmokrassar.simpleweightcontrol.front.fragments.WeightsChartFragment"
            android:id="@+id/weightsChartFragment"/>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.github.insanusmokrassar.simpleweightcontrol.front.fragments.DatesOfWeightsFragment"
            android:id="@+id/datesOfWeightsFragment"/>
    </LinearLayout>
</ScrollView>